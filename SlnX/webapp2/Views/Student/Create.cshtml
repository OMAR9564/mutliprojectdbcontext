<style>
    .container {
        margin-top: 50px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-check-label {
        font-weight: normal;
    }

    .form-check-input {
        margin-left: 0;
    }
</style>

<body>

    <div class="container">
        <form action="Create" method="post">
            <div class="mb-3">
                <label for="StudentName" class="form-label">Name</label>
                <input type="text" class="form-control" name="StudentName" id="StudentName" placeholder="Your Name">
            </div>
            <div class="mb-3">
                <label for="StudentAge" class="form-label">Age</label>
                <input type="text" class="form-control" name="StudentAge" id="StudentAge" placeholder="Your Age">
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" name="IsActive" id="IsActive" value="true" checked>
                <label class="form-check-label" for="IsActive">Is Active</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</body>
